layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="file:~/.config/zellij/plugins/zjstatus.wasm" {
                format_left   "{mode}{tabs}"
                format_center ""
                format_right  "#[fg=#24283b,bg=NONE]#[fg=#3b4261,bg=#24283b]#[fg=#7aa2f7,bg=#3b4261,nobold]#[fg=#7aa2f7,bg=#7aa2f7,bold] {datetime}"
                format_space  "#[fg=NONE,bg=NONE]"

                hide_frame_for_single_pane "true"

                mode_normal        "#[fg=#24283b,bg=#7aa2f7,bold] {name} #[fg=#7aa2f7,bg=NONE]"
                mode_pane          "#[fg=#24283b,bg=#9ece6a,bold] {name} #[fg=#9ece6a,bg=NONE]"
                mode_tab           "#[fg=#24283b,bg=#bb9af7,bold] {name} #[fg=#bb9af7,bg=NONE]"
                mode_scroll        "#[fg=#24283b,bg=#f7768e,bold] {name} #[fg=#f7768e,bg=NONE]"
                mode_rename_tab    "#[fg=#24283b,bg=#f7768e,bold] {name} #[fg=#f7768e,bg=NONE]"
                mode_rename_pane   "#[fg=#24283b,bg=#f7768e,bold] {name} #[fg=#f7768e,bg=NONE]"
                mode_session       "#[fg=#24283b,bg=#9d7cd8,bold] {name} #[fg=#9d7cd8,bg=NONE]"
                mode_move          "#[fg=#24283b,bg=#e0af68,bold] {name} #[fg=#e0af68,bg=NONE]"
                mode_locked        "#[fg=#24283b,bg=#e0af68,bold] {name} #[fg=#e0af68,bg=NONE]"
                mode_enter_search  "#[fg=#24283b,bg=#e0af68,bold] {name} #[fg=#e0af68,bg=NONE]"
                mode_prompt        "#[fg=#24283b,bg=#e0af68,bold] {name} #[fg=#e0af68,bg=NONE]"

                tab_normal    "#[fg=#cdd6f4,bg=NONE] {index}  {name} "
                tab_active    "#[fg=#24283b,bg=NONE]#[fg=#24283b,bg=#24283b]#[fg=#c0caf5,bg=#24283b] {index} #[fg=#24283b,bg=#ff9e64]#[fg=#24283b,bg=#ff9e64] {name} #[fg=#ff9e64,bg=NONE]"

                datetime        "#[fg=#24283b,bg=#7aa2f7] {format} "
                datetime_format "%d %b %Y %H:%M"
                datetime_timezone "America/Mexico_City"
            }
        }
    }
}
